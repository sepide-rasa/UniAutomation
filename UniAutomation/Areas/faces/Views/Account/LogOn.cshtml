@model UniAutomation.Areas.faces.Models.LogOnModel

<link href="@Url.Content("~/Content/login-box.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<style type="text/css">
    body
    {
        background-image: url('~/content/images/1-Normal-Home-icon.png');
        font-size: 75%;
        font-family: Tornado Tahoma;
        margin: 0;
        padding: 0;
        color: #696969;
        direction: rtl;
    }
    #main
    {
        background: transparent;
        padding: 100%;
        padding: 30px 30px 15px 30px;
        margin-bottom: 30px;
        _height: 1px;
        font-family: Tornado Tahoma;
        direction: rtl;
    }
   
</style>
@Html.ValidationSummary(true, "ورود نا موفق.")
@using (Html.BeginForm())
{
    
    <div style="padding: 30px 0 0 400px;">
        <center style="padding-right: 70px;color: #ff0000;font: bold 20px rasafont,tahoma , Arial;">
            از تاریخ 1398/12/24 رمز عبور کلیه افراد به نام کاربری تغییر یافته است،
            <br />
            لطفا پس از اولین ورود نسبت به تغییر آن اقدام نمایید.
            <div id="login-box">
                <center style="padding-right: 70px;color: #ebebeb;font: bold 20px rasafont,tahoma , Arial;">
                    <h2>
                        ورود کاربران
                    </h2>
                    <br />
                    <table dir="rtl" style="color:White;font-size:15px;width:300px;">
                        <tr class="login-box-field">
                            <td>
                                نام کاربری: @Html.TextBoxFor(m => m.UserName)
                            </td>
                            <td>
                                @Html.ValidationMessageFor(m => m.UserName)
                            </td>
                        </tr>
                        <tr class="login-box-field">
                            <td>
                                کلمه عبور: @Html.PasswordFor(m => m.Password)
                            </td>
                            <td>
                                @Html.ValidationMessageFor(m => m.Password)
                            </td>
                        </tr>
                    </table>
                    <br />
                    <div class="login-box-options" style="width: 200px;">
                        مرا بخاطر بسپار؟@Html.CheckBoxFor(m => m.RememberMe)
                    </div>
                    <br />
                    <input type="submit" value="" id="btn" />
                </center>
            </div>
</div>
    
}
