    <script src="@Url.Content("~/Scripts/json3.min.js")" type="text/javascript"></script>
    <script type="text/javascript">
        var isWinOpen = false;
    </script>
</head>

<body>
    <div id="Lock" style="display:none;position: fixed;top: 0;left: 0;z-index: 10001;width: 100%;height: 100%;background-color: #000;filter: alpha(opacity=50);opacity: .5;">
        <img src="@Url.Content("~/Content/images/toggle-loading.gif")" id="loading-indicator" style="position: absolute;left: 40%;top: 50%;" />
    </div>
	<div class="page">
		<header>
            <img src="~/Content/header.png" />
		</header>
		<section id="main">
			@RenderBody()
		</section>
		<footer>
		</footer>
	</div>
</body>
</html>
