        <div class="k-rtl demo-section">
            @(Html.Kendo().Grid<UniAutomation.Areas.faces.Models.sp_tblFoodServeSelect>()
                .Name("Grid")
                .Columns(columns =>
                {
                    columns.Bound(p => p.fldID).Title("کد").Visible(false);
                    columns.Bound(p => p.fldStartTime).ClientTemplate("#=fldStartTime.Hours#:#=fldStartTime.Minutes#").Title("زمان شروع");
                    columns.Bound(p => p.fldEndTime).ClientTemplate("#=fldEndTime.Hours#:#=fldEndTime.Minutes#").Title("زمان پایان");
                    columns.Bound(p => p.fldFoodDate).Title("تاریخ");
                    columns.Bound(p => p.fldFoodName).Title("برنامه غذایی");
                    columns.Bound(p => p.fldNumber).Title("تعداد");
                    
                })
            .Selectable(selectable => selectable.Mode(GridSelectionMode.Single))
            .Pageable()
            .Scrollable()
            .DataSource(data =>
                data.Ajax()
                .PageSize(10)
                .Read("Fill", "FoodServe")
            )
        )
        </div>
    </div>
    <script type="text/javascript">
    var id = 0;
    var Name;
    var Self;
    var isWinOpen = false;
    $("document").ready(function () {
        $("#AddLink").button();
        $("#EditLink").button();
        $("#DelLink").button();
        $("#exit").button();
        $("#Help").button();

        $('#Ghaza').hide();
        $('#_Ghaza').hide();
        $('#Tedad').hide();
        $('#_Tedad').hide();
        $('#Nobat').show();
        $('#_Nobat').show();
        $('#Type').hide();
        $('#_Type').hide();

        $("#exit").click(function () {
            $("#FoodServe").remove();
        });

        $('#cboRezervType').change(function () {
            if ($('#cboRezervType').val() == "true") {
                $('#Ghaza').hide();
                $('#_Ghaza').hide();
                $('#Tedad').hide();
                $('#_Tedad').hide();
                $('#Type').hide();
                $('#_Type').hide();
                $('#Nobat').show();
                $('#_Nobat').show();

                var url = '@Url.Action("Reload", "FoodServe")';
                Reload(url, 'Grid', '2', 'true', 30, 2);
            }
            else if ($('#cboRezervType').val() == "false") {
                $('#Ghaza').show();
                $('#_Ghaza').show();
                $('#Tedad').show();
                $('#_Tedad').show();
                $('#Nobat').hide();
                $('#_Nobat').hide();
                $('#Type').show();
                $('#_Type').show();

                var url = '@Url.Action("Reload", "FoodServe")';
                Reload(url, 'Grid', '2', 'false', 30, 2);
            }
        }); 
        $('#cboType').change(function () {
            if ($('#cboType').val() == 2) {
                $('#_Ghaza').hide();
                $('#Ghaza').hide();
            }
            else {
                $('#Ghaza').show();
                $('#_Ghaza').show();
            }
        });

        $('#txtFoodName').keyup(function () {
            if (isWinOpen == false) {
                windowAppend("#FoodServe", "/faces/SearchFoodProgramingIns");
                isWinOpen = true;
            }
        });
        $('#FoodServe').on('keyup', 'input', function (event) {
            if (event.which == 13) {
                var inputs = $('#FoodServe').find(':input:visible');
                inputs.eq(inputs.index(this) + 1).focus();
            }
        });
        $(document).keyup(function (event) {
            if (event.which == 119) {
                SaveRecord();
            }
            else if (event.which == 113) {
                EditRecord();
            }
            else if (event.which == 115) {
                DeleteRecord();
            }
        });
        $('#AddLink').attr('title', 'کلید میانبر (F8)'); //119
        $('#EditLink').attr('title', 'کلید میانبر (F2)'); //113
        $('#DelLink').attr('title', 'کلید میانبر (F4)'); //115

        jQuery("#EditLink").click(function () {
            EditRecord();
        });

        $('#DelLink').click(function () {
            DeleteRecord();
        });

        $("#AddLink").click(function () {
            SaveRecord();
        });


        $('#txtSearch').keyup(function () {
            var url = '@Url.Action("Reload", "FoodServe")';
            Reload(url, 'Grid', $("#cboSearchFiald").val(), $("#txtSearch").val(), $("#txtTop").val(), $("#cboSearchType").val());
        });



        $("#txtStartTimeM").keyup(function () {
            if ($("#txtStartTimeM").val() != '') {
                $("#txtStartTimeM").removeClass("input-validation-error");
                $("#lblStartTimeMError").html("");
            }
            else {
                $("#txtStartTimeM").addClass("input-validation-error");
                $('#lblStartTimeMError').html('لطفا زمان شروع را وارد کنید.');
            }
        });

        $("#txtStartTimeH").keyup(function () {
            if ($("#txtStartTimeH").val() != '') {
                $("#txtStartTimeH").removeClass("input-validation-error");
                $("#lblStartTimeHError").html("");
            }
            else {
                $("#txtStartTimeH").addClass("input-validation-error");
                $('#lblStartTimeHError').html('لطفا زمان شروع را وارد کنید.');
            }
        });

        $("#txtEndTimeM").keyup(function () {
            if ($("#txtEndTimeM").val() != '') {
                $("#txtEndTimeM").removeClass("input-validation-error");
                $("#lblEndTimeMError").html("");
            }
            else {
                $("#txtEndTimeM").addClass("input-validation-error");
                $('#lblEndTimeMError').html('لطفا زمان پایان را وارد کنید.');
            }
        });

        $("#txtEndTimeH").keyup(function () {
            if ($("#txtEndTimeH").val() != '') {
                $("#txtEndTimeH").removeClass("input-validation-error");
                $("#lblEndTimeHError").html("");
            }
            else {
                $("#txtEndTimeH").addClass("input-validation-error");
                $('#lblEndTimeHError').html('لطفا زمان پایان را وارد کنید.');
            }
        });


    });
    function Clear() {
        $('#txtNumber').val('');
        $('#fldID').val(0);
        $('#txtDesc').val('');
        $("#txtStartTimeM").val('');
        $("#txtStartTimeH").val('');
        $("#txtEndTimeM").val('');
        $("#txtEndTimeH").val('');
        id = 0;
    }
    function DeleteRecord() {
        var entityGrid = $("#Grid").data("kendoGrid");
        var selectedItem = entityGrid.dataItem(entityGrid.select());
        if (selectedItem) {
            var id = selectedItem.fldID;
            var URL = '@Url.Content("~/faces/metro/YesNomsg")';
            URL = URL + "/?id=" + id + "&URL=" + '@Url.Content("~/FoodServe/Delete")';
            windowAppend("body", URL);
            $("#message").html('آیا مایل به حذف رکورد انتخاب شده هستید؟');
        }
        else {
            alert('لطفا یک سطر را انتخاب کنید.');
        }
        Clear();
    }
    function SaveRecord() {
        var er = false;
        if ($("#cboRezervType").val() == '') {
            $("#cboRezervType").addClass("input-validation-error");
            $('#lblRezervTypeError').html('لطفا نوع رزرو را انتخاب نمایید.');
            er = true;
        }
        else
            $('#lblRezervTypeError').html('');

        if ($("#cboRezervType").val()=="false") {
            if ($("#cboType").val() == '') {
                $("#cboType").addClass("input-validation-error");
                $('#lblTypeError').html('لطفا نوع کاربر را انتخاب نمایید.');
                er = true;
            }
            else
                $('#lblTypeError').html('');
        }

        if ($("#cboRezervType").val() == 'false') {
            if ($("#txtNumber").val() == '') {
                $("#txtNumber").addClass("input-validation-error");
                $('#lblNumberError').html('لطفا تعداد را وارد کنید.');
                er = true;
            }
            else {
                $('#lblNumberError').html('');
                $("#txtNumber").removeClass("input-validation-error");
            }

            if ($("#cboType").val() != '2') {
                if (id == 0) {
                    $("#txtFoodName").addClass("input-validation-error");
                    $('#lblNameError').html('لطفا نام غذا را انتخاب کنید.');
                    er = true;
                }
                else {
                    $('#lblNameError').html('');
                    $("#txtFoodName").removeClass("input-validation-error");
                }
            }
        }
        if ($("#cboRezervType").val() == 'true') {
            if ($("#cboNobat").val() == '') {
                $("#cboNobat").addClass("input-validation-error");
                $('#lblNobatError').html('لطفا وعده را انتخاب نمایید.');
                er = true;
            }
            else
                $('#lblNobatError').html('');
        }

        if ($("#txtStartTimeM").val() == '' || $("#txtStartTimeH").val() == '') {
            $("#txtStartTimeM").addClass("input-validation-error");
            $("#txtStartTimeH").addClass("input-validation-error");
            $('#lblStartTimeMError').html('لطفا زمان شروع را وارد کنید.');
            er = true;
        }
        else {
            $('#lblStartTimeMError').html('');
            $("#txtStartTimeM").removeClass("input-validation-error");
            $("#txtStartTimeH").removeClass("input-validation-error");
        }


        if ($("#txtEndTimeM").val() == '' || $("#txtEndTimeH").val() == '') {
            $("#txtEndTimeM").addClass("input-validation-error");
            $("#txtEndTimeH").addClass("input-validation-error");
            $('#lblEndTimeMError').html('لطفا زمان پایان را وارد کنید.');
            er = true;
        }
        else {
            $('#lblEndTimeMError').html('');
            $("#txtEndTimeM").removeClass("input-validation-error");
            $("#txtEndTimeH").removeClass("input-validation-error");
        }







        if (er)
            return;

        StartTime = $("#txtStartTimeH").val() + ':' + $("#txtStartTimeM").val();
        EndTime = $("#txtEndTimeH").val() + ':' + $("#txtEndTimeM").val();
        var data = {
            fldUserType:$("#cboType").val(),
            fldStartDate: $("#txtStartDate").val(),
            fldEndDate: $("#txtEndDate").val(),
            fldStartTime: StartTime,
            fldEndTime: EndTime,
            fldNumber: $("#txtNumber").val(),
            fldDesc: $("#txtDesc").val(),
            fldID: $("#fldID").val(),
            fldRezervType: $('#cboRezervType').val(),
            fldNobat: $('#cboNobat').val(),
            fldFoodPrograminID: id
        };
        if (data != '') {
            PostForm(data, '@Url.Content("~/FoodServe/Save")', "#win");
        }
        Clear();
    }
    function EditRecord() {
        var entityGrid = $("#Grid").data("kendoGrid");
        var selectedItem = entityGrid.dataItem(entityGrid.select());
        if (selectedItem) {
            var id = selectedItem.fldID;
            var URL = '@Url.Content("~/FoodServe/Details")';
                URL = URL + "/" + id;
                $.ajax({
                    type: "GET",
                    url: URL,
                    success: function (data) {
                        $('#fldID').val(data.fldID);
                        $("#txtStartTimeM").val(data.fldStartTimeM);
                        $("#txtStartTimeH").val(data.fldStartTimeH);
                        $("#txtEndTimeM").val(data.fldEndTimeM);
                        $("#txtEndTimeH").val(data.fldEndTimeH);
                        $('#txtFoodName').val(data.fldFoodName);
                        $('#txtSelfName').val(data.fldName);
                        $('#txtNumber').val(data.fldNumber);
                        var model = $("#cboRezervType").data("kendoDropDownList");
                        model.value(data.fldRezervType);
                        var model1 = $("#cboType").data("kendoDropDownList");
                        model1.value(data.fldUserType);

                        id = data.fldFoodPrograminID;
                        $('#txtDesc').val(data.fldDesc);

                        if (data.fldRezervType == true) {
                            $('#Ghaza').hide();
                            $('#_Ghaza').hide();
                            $('#Tedad').hide();
                            $('#_Tedad').hide();
                            $('#Nobat').show();
                            $('#_Nobat').show();
                            $('#Type').hide();
                            $('#_Type').hide();

                            var Nobat = $("#cboNobat").data("kendoDropDownList");
                            Nobat.value(data.fldNobat);
                        }
                        else if (data.fldRezervType == false) {
                            $('#Tedad').show();
                            $('#_Tedad').show();
                            $('#Nobat').hide();
                            $('#_Nobat').hide();
                            $('#Type').show();
                            $('#_Type').show();
                            if (data.fldUserType == 2) {
                                $('#Ghaza').hide();
                                $('#_Ghaza').hide();
                            }
                            else {
                                $('#Ghaza').show();
                                $('#_Ghaza').show();
                                
                            }
                        }
                    },
                    failure: function (data) {
                        alert(data.data);
                    }
                });
            }
            else {
                alert('لطفا یک سطر را انتخاب کنید.');
            }
        }


        function Reload(Url, gridname, field, value, top, searchType) {
            var grid = $('#' + gridname).data('kendoGrid');
            $.ajax({
                url: Url,
                type: 'get',
                datatype: 'json',
                data: { field: field, value: value, top: top, searchtype: searchType },
                error: function (xhr, status, error) {
                    alert(xhr + status);
                },
                success: function (result) {
                    $("#" + gridname).data("kendoGrid").dataSource.data(result);
                }

            });
        }

        function PostForm(datas, url, id) {
            var sendInfo = datas;
            $('#Lock').show();
            $.ajax({
                type: "POST",
                url: url,
                data: sendInfo,
                datatype: "json",
                success: function (data) {
                    var m = data;
                    windowAppend("body", "/faces/metro/error");
                    $("#message").html(m.data);
                    switch (m.state) {
                        case 0:
                            $("#error .wintitle").html("ذخیره موفق");
                            break;
                        case 1:
                            $("#error .wintitle").html("خطا");
                            break;
                    }
                    var url = '@Url.Action("Reload", "FoodServe")';
                    Reload(url, 'Grid', '2', $('#cboRezervType').val(), 30, 2);
                    $('#Lock').hide();
                },
                failure: function (data) {
                    alert(data.data);
                }
            });
        }
    </script>
</div>
