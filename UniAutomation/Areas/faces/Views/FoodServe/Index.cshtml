                    </td>

                    </tr>
                <tr>
                    <td align="left" id=Ghaza>
                        <span style="color: Red;">*</span> نام غذا(Ins)
                    </td>
                    <td id=_Ghaza>
                        @Html.TextBox("txtFoodName", null, new { @style = "width: 164px;height: 23px;background-color:rgb(222, 231, 239);" })
                        <span id="lblNameError" style="color: Red;"></span>
                    </td>
                    <td align="left" id=Tedad>
                        <span style="color: Red;">*</span>تعداد:
                    </td>
                    <td align="right" id=_Tedad>
                        @UniAutomation.Helper.winClass.textbox("txtNumber")
                        <span id="lblNumberError" style="color: Red;"></span>
                    </td>
                    @*<td align="left"> 
                       <span style="color: Red;">*</span> نام سلف:
                    </td>
                    <td> 
                        @Html.TextBox("txtSelfName", null, new { @style = "width: 164px;height: 23px;background-color:rgb(222, 231, 239);" })
                        <span id="lblMeliCodeError" style="color: Red;"></span>
                    </td>*@
                </tr>
                 <tr>
                    <td align="left">
                       <span style="color: Red;">*</span> از ساعت:
                    </td>
                    <td align="right">
                        @Html.TextBox("txtStartTimeM", null, new { @style = "width:30px;height: 23px;" })
                        : @Html.TextBox("txtStartTimeH", null, new { @style = "width:30px;height: 23px;" })
                        <span id="lblStartTimeMError" style="color: Red;"></span>
                        <span id="lblStartTimeHError" style="color: Red;"></span>
                    </td>
               
                    <td align="left">
                        <span style="color: Red;">*</span>تا ساعت:
                    </td>
                    <td align="right">
                        @Html.TextBox("txtEndTimeM", null, new { @style = "width:30px;height: 23px;" })
                        : @Html.TextBox("txtEndTimeH", null, new { @style = "width:30px;height: 23px;" })
                        <span id="lblEndTimeMError" style="color: Red;"></span>
                        <span id="lblEndTimeHError" style="color: Red;"></span>
                    </td>
                </tr>
                 
                    
                    <tr>
                    <td align="left">
                        توضیحات:
                    </td>
                    <td>
                        @UniAutomation.Helper.winClass.textArea("txtDesc", 4, 30)
                    </td>
                </tr>    
            </table>
            <p>
                @UniAutomation.Helper.winClass.Buttons("AddLink", "ذخیره", "Save")
                @UniAutomation.Helper.winClass.Buttons("EditLink", "ویرایش", "Edit")
                @UniAutomation.Helper.winClass.Buttons("DelLink", "حذف", "Del")
                @UniAutomation.Helper.winClass.Buttons("exit", "خروج", "Exit")
            </p>
        </center>
