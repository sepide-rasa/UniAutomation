                    $("#txtStartTimeM").val(data.fldStartTimeM);
                    $("#txtStartTimeH").val(data.fldStartTimeH);
                    $("#txtEndTimeM").val(data.fldEndTimeM);
                    $("#txtEndTimeH").val(data.fldEndTimeH);
