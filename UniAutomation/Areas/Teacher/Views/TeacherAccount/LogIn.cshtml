@model UniAutomation.Models.LogOnModel

<link href="@Url.Content("~/Content/login-box.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<style type="text/css">
    body {
        background-image: url('~/content/images/1-Normal-Home-icon.png');
        font-size: 7%;
        font-family: Tornado Tahoma;
        margin: 0;
        padding: 0;
        color: #696969;
        direction: rtl;
    }

    #main {
        background: transparent;
        padding: 100%;
        padding: 30px 30px 15px 30px;
        margin-bottom: 30px;
        _height: 1px;
        font-family: Tornado Tahoma;
        direction: rtl;
    }
</style>
@Html.ValidationSummary(true, "ورود نا موفق.")
@using (Html.BeginForm())
{

    <div style="padding: 100px 0 0 400px;">
        <div id="login-box">
            <center style="padding-right: 70px;">
                <h2>
                    ورود اساتید
                </h2>
                <br />
                <br />
                <table dir="rtl" style="color:White;font-size:12px;width:300px;">
                    <tr class="login-box-field">
                        <td>
                            نام کاربری: @Html.TextBoxFor(m => m.UserName)
                        </td>
                        <td>
                            @Html.ValidationMessageFor(m => m.UserName)
                        </td>
                    </tr>
                    <tr class="login-box-field">
                        <td>
                            کلمه عبور: @Html.PasswordFor(m => m.Password)
                        </td>
                        <td>
                            @Html.ValidationMessageFor(m => m.Password)
                        </td>
                    </tr>
                </table>
                <br />
                <div class="login-box-options" style="width: 200px;">
                    مرا بخاطر بسپار؟@Html.CheckBoxFor(m => m.RememberMe)
                </div>
                <br />
                <br />
                <input type="submit" value="" id="btn" />
            </center>
        </div>
    </div>

}

